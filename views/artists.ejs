<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Artists</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Ideum</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/artists">Artists</a>
                </li>
                
                <% if (isAdmin) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                <% } %>
                
                <% if (isLoggedIn) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/post/create">Create</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="mb-4">All Artists</h1>
        <div class="row">
            <% artists.forEach(artist => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= artist.image %>" class="card-img-top" alt="<%= artist.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= artist.name %></h5>
                            <p class="card-text">Members: <%= artist.members.join(', ') %></p>
                            <p class="card-text">Creation Date: <%= artist.creationDate %></p>
                            <a href="/artist/<%= artist.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>

</html>
