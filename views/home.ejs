<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Ideum</a>
    
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/artists">Artists</a>
        </li>
        <% if (isAdmin) { %>
        <li class="nav-item">
          <a class="nav-link" href="/admin">Admin</a>
        </li>
        <% } %>
        <% if (isLoggedIn) { %>
        <li class="nav-item">
          <a class="nav-link" href="/post/create">Create</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/auth/register">Register</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/login">Login</a>
        </li>
        <% } %>
      </ul>
    
      <form class="form-inline mx-auto my-2 my-lg-0" action="/inspiration/search" method="POST">
        <input class="form-control mr-sm-2" type="search" placeholder="Tall cactus" aria-label="Search" id="query" name="query">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div
        class="collapse navbar-collapse"
        id="navbarNav"
      ></div>
    </nav>

    <div class="container mt-5">
      <h1 class="mb-4">All Posts</h1>

      <% if (posts.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% posts.forEach(post => { %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <img
              src="<%= post.imageUrl %>"
              class="card-img-top"
              alt="<%= post.title %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= post.title.en %></h5>
              <p class="card-text"><%= post.content.en.substring(0, 100) %></p>
              <p class="card-text mt-5">Author:</p>
              <p class="card-text">
                <strong><%= post.author.username %></strong>
              </p>
              <a href="/post/<%= post._id %>" class="btn btn-primary"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p>No posts found.</p>
      <% } %>
    </div>

    <script type="text/javascript">
      var linguJSON = {
        languages: [
          {
            lang_name: "English",
            lang_code: "en",
            url_pattern: "?",
          },
          {
            lang_name: "Russian",
            lang_code: "ru",
            url_pattern: "?",
          },
        ],
        translated_segments: [
          <% posts.forEach(post => { %>
              {
                  source: "<%= post.title.en %>",
                  target: "<%= post.title.ru %>"
              },
              {
                  source: "<%= post.content.en %>",
                  target: "<%= post.content.ru %>"
              },
          <% }); %>
          {
            source: "Home",
            target: "Главная страница",
          },
          {
            source: "Artists",
            target: "Музыканты",
          },
          {
            source: "Admin",
            target: "Админка",
          },
          {
            source: "Logout",
            target: "Выйти",
          },
          {
            source: "Create",
            target: "Создать",
          },
          {
            source: "Register",
            target: "Зарегестрироваться",
          },
          {
            source: "Login",
            target: "Войти",
          },
          {
            source: "All Posts",
            target: "Все посты",
          },
          {
            source: "Read More",
            target: "Подробнее",
          },
          {
            source: "No posts found.",
            target: "Постов пока нет :(",
          },
          {
            source: "Author:",
            target: "Автор:",
          },
          {
            source: "Sarvarov Mustafa | Group: SE-2203",
            target: "Сарваров Мустафа | Группа: КИ-2203",
          },
          {
            source: "Search",
            target: "Искать",
          },
        ]
      };
    </script>
    <script src="/scripts/lingumania.js"></script>

    <footer class="mt-5 text-center">
      <hr />
      <h2>Sarvarov Mustafa | Group: SE-2203</h2>
    </footer>
  </body>
</html>
